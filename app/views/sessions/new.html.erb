<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3 class="page-title">Fa√ßa seu login</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <div class="col-sm-8 col-sm-offset-2">
                        <%= form_tag login_success_path, class: 'form-horizontal' do %>
                            <div class="form-group">
                                <%= label_tag :token, 'Token', class: 'col-sm-2 control-label' %>
                                <div class="col-sm-8">
                                    <%= text_field_tag :token, nil, class: 'form-control', id: 'enter-token', placeholder: 'Token' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-2">
                                    <%= submit_tag 'Entrar', class: 'btn btn-default' %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
